LIBOS_DEBUG=1

# Enable the tiny profile
LIBOS_TINY=0
LIBOS_FEATURE_HANDLE_COPY=0

LIBOS_FEATURE_PRIORITY_SCHEDULER=1
LIBOS_FEATURE_SHUTDOWN=1
LIBOS_CONFIG_INTEGRITY_MEMERR=0

# Turn on priority based scheduling
LIBOS_TIMESLICE=1000000

# Enable kernel prints through DEBUGINFO register
LIBOS_CONFIG_KERNEL_LOG=1
LIBOS_CONFIG_KERNEL_TRACE=0

# The core supports RISC-V 2.2
LIBOS_LWRISCV=200

# Describe the total imem size
LIBOS_CONFIG_IMEM_SIZE=0x80000
LIBOS_CONFIG_DMEM_SIZE=0x80000

LIBOS_CONFIG_MPU_INDEX_FIRST=0
LIBOS_CONFIG_MPU_INDEX_COUNT=128
LIBOS_CONFIG_MPU_PAGESIZE=4096

# Default kernel pagesize for the MM
LIBOS_CONFIG_PAGESIZE=4096
LIBOS_CONFIG_PAGESIZE_LOG2=12

LIBOS_CONFIG_FLOAT=0
LIBOS_CONFIG_HAS_FBIO=1

LIBOS_CONFIG_TIME_TO_NS(time)=time
LIBOS_CONFIG_TIME_NS(time)=time

LIBOS_CONFIG_GDMA_SUPPORT=0
LIBOS_MAX_PARTITION_COUNT=6
LIBOS_MEMORY_NODE_COUNT=1
