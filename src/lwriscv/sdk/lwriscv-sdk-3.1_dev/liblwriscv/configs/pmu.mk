# Engine configuration, to be included by other configs
LWRISCV_IS_ENGINE := pmu

# This is for GA102 and GA100, we have native CSB on GH100+
LWRISCV_HAS_CSB_OVER_PRI_SHIFT := 0

# t234 and t239 are the same
ifeq ($(LWRISCV_IS_CHIP),$(filter $(LWRISCV_IS_CHIP),t234 t239))
LWRISCV_IMEM_SIZE := 0x10000
LWRISCV_DMEM_SIZE := 0x10000
LWRISCV_EMEM_SIZE := 0x0
endif

ifeq ($(LWRISCV_IS_CHIP),gh100)
LWRISCV_IMEM_SIZE := 0x2a000
LWRISCV_DMEM_SIZE := 0x2c800
LWRISCV_EMEM_SIZE := 0x0
LWRISCV_HAS_GDMA := y
endif

ifeq ($(LWRISCV_IS_CHIP),ga102)
LWRISCV_IMEM_SIZE := 0x24000
LWRISCV_DMEM_SIZE := 0x2c000
LWRISCV_EMEM_SIZE := 0x0
endif

ifeq ($(LWRISCV_IS_CHIP),ga100)
LWRISCV_IMEM_SIZE := 0x20000
LWRISCV_DMEM_SIZE := 0x20000
LWRISCV_EMEM_SIZE := 0x0
endif

ifeq ($(LWRISCV_IS_CHIP),ad102)
LWRISCV_IMEM_SIZE := 0x24000
LWRISCV_DMEM_SIZE := 0x2c000
LWRISCV_EMEM_SIZE := 0x0
endif

ifeq ($(LWRISCV_IS_CHIP),gb100)
LWRISCV_IMEM_SIZE := 0x2a000
LWRISCV_DMEM_SIZE := 0x2c800
LWRISCV_EMEM_SIZE := 0x0
LWRISCV_HAS_GDMA := y
endif

LWRISCV_HAS_DIO_SE := y
LWRISCV_HAS_SHA := y
