# Engine configuration, to be included by other configs
LWRISCV_IS_ENGINE := gsp

# MK TODO: this probably should be fetched from manuals anyway
# This is for GA102 and GA100, we have native CSB on GH100+
LWRISCV_HAS_CSB_OVER_PRI_SHIFT := 6

ifeq ($(LWRISCV_IS_CHIP),t239)
LWRISCV_IMEM_SIZE := 0x6000
LWRISCV_DMEM_SIZE := 0x6000
LWRISCV_EMEM_SIZE := 0x2000
endif

ifeq ($(LWRISCV_IS_CHIP),t234)
LWRISCV_IMEM_SIZE := 0x16000
LWRISCV_DMEM_SIZE := 0x10000
LWRISCV_EMEM_SIZE := 0x2000
endif

ifeq ($(LWRISCV_IS_CHIP),gh100)
LWRISCV_IMEM_SIZE := 0x1e000
LWRISCV_DMEM_SIZE := 0x10000
LWRISCV_EMEM_SIZE := 0x2000
LWRISCV_HAS_GDMA := y
LWRISCV_HAS_RTS := y
endif

ifeq ($(LWRISCV_IS_CHIP),ga102)
LWRISCV_IMEM_SIZE := 0x16000
LWRISCV_DMEM_SIZE := 0x10000
LWRISCV_EMEM_SIZE := 0x2000
endif

ifeq ($(LWRISCV_IS_CHIP),ga100)
LWRISCV_IMEM_SIZE := 0x10000
LWRISCV_DMEM_SIZE := 0x10000
LWRISCV_EMEM_SIZE := 0x2000
endif

ifeq ($(LWRISCV_IS_CHIP),tu102)
LWRISCV_IMEM_SIZE := 0x10000
LWRISCV_DMEM_SIZE := 0x10000
LWRISCV_EMEM_SIZE := 0x2000
endif

ifeq ($(LWRISCV_IS_CHIP),ad102)
LWRISCV_IMEM_SIZE := 0x16000
LWRISCV_DMEM_SIZE := 0x10000
LWRISCV_EMEM_SIZE := 0x2000
endif

ifeq ($(LWRISCV_IS_CHIP),gb100)
LWRISCV_IMEM_SIZE := 0x1e000
LWRISCV_DMEM_SIZE := 0x10000
LWRISCV_EMEM_SIZE := 0x2000
LWRISCV_HAS_GDMA := y
LWRISCV_HAS_RTS := y
endif

LWRISCV_HAS_DIO_SE := y
LWRISCV_HAS_DIO_FBHUB := y
LWRISCV_HAS_SHA := y
